{
  "name": "apollo",
  "type": "project",
  "license": "MIT",
  "description": "A WordPress theme bundle.",
  "homepage": "https://github.com/j2made/apollo",
  "authors": [
    {
      "name": "Shaun M. Baer",
      "email": "shaun.baer@gmail.com",
      "homepage": "https://github.com/iamhexcoder"
    },
    {
      "name": "Daniel Olson",
      "email": "emaildano@gmail.com",
      "homepage": "https://github.com/emaildano"
    }
  ],
  "keywords": [
    "wordpress", "stack", "composer", "theme", "wp"
  ],
  "support": {
    "issues": "https://github.com/j2made/apollo/issues"
  },
  "config": {
    "preferred-install": "dist",
    "vendor-dir": "wordpress/lib/vendor/"
  },
  "scripts": {
    "pre-update-cmd": [
      "php -r \"copy('wordpress/lib/config/wp-config-sample.php', 'wordpress/web/wp-config.php');\"",
      "curl https://api.wordpress.org/secret-key/1.1/salt >> wordpress/web/wp-config.php",
      "php -r \"if(!file_exists('.env')) { copy('wordpress/lib/config/env.example', 'wordpress/.env'); }\""
    ]
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "package",
      "package": {
        "name": "getshifter/get-all-links",
        "version": "dev-master",
        "type": "wordpress-muplugin",
        "dist": {
          "type": "zip",
          "url": "https://github.com/getshifter/get-all-links/archive/master.zip"
        }
      }
    }
  ],
  "require": {
    "php": ">=5.4",
    "johnpbloch/wordpress": "4.8",
    "composer/installers": "1.3.0",
    "vlucas/phpdotenv": "^2.4",
    "oscarotero/env": "^1.1.0",
    "getshifter/get-all-links": "dev-master"
  },
  "extra": {
    "installer-paths": {
      "wordpress/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "wordpress/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "./": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "wordpress/web/wp"
  }
}
